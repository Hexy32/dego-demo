{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./out",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true
  }
}
